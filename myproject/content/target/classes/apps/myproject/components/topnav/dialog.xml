<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Topnav dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="General">
                <items jcr:primaryType="cq:WidgetCollection">
                    <toolbartextColor
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Toolbar Color Text"
                        name="./toolbarcolortext"
                        showHexValue="false"
                        xtype="colorfield"/>
                    <backgroundColor
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Bar background color"
                        name="./toolbarbgcolor"
                        showHexValue="false"
                        xtype="colorfield"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
