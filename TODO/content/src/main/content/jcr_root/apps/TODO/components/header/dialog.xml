<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="cq:Dialog"
	title="Header Settings" xtype="dialog">
	<items jcr:primaryType="cq:Widget" xtype="tabpanel">
		<items jcr:primaryType="cq:WidgetCollection">
			<configs jcr:primaryType="cq:Panel" title="Header Settings">
				<items jcr:primaryType="cq:WidgetCollection">
					<lblHeader jcr:primaryType="nt:unstructured" fieldLabel="Header Text"
						name="./lblHeader" validateOnBlur="true" xtype="textfield" />
					<backgroudColor showHexValue="{Boolean}true" xtype="colorfield"
						name="./backgroudColor" jcr:primaryType="cq:Widget" fieldLabel="Background color" />
				</items>
			</configs>
		</items>
	</items>
</jcr:root>