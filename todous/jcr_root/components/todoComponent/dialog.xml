<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Todo Component Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Todo Page Config">
                <items jcr:primaryType="cq:WidgetCollection">
                    <displayText
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Enter text to be displayed"
                        fieldLabel="Display Text"
                        name="./displaytext"
                        xtype="textfield"/>
                    <buttonText
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Button"
                        name="./button"
                        xtype="textfield"/>
                    <inputText
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Input Text"
                        name="./placeholder"
                        xtype="textfield"/>
                    <pagination
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Enable pagination"
                        name="./enable_pagination"
                        xtype="checkbox">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            check="function(one, two){ &#xa;panel1=this.findParentByType(&quot;panel&quot;);&#xa;panel2=panel1.nextSibling();&#xa;if(!panel2.disabled){&#xa;panel2.disable();&#xa;}else{&#xa;panel2.enable();&#xa;}&#xa;&#xa; }"/>
                    </pagination>
                    <color
                        jcr:primaryType="cq:Widget"
                        defaultValue="FFF"
                        fieldLabel="Color"
                        name="./color"
                        xtype="colorfield">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            change="function(one, two, three){ &#xa;$(&quot;.container&quot;).css(&quot;background-color&quot;, two);&#xa; }"/>
                    </color>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Panel"
                disabled="{Boolean}true"
                title="Pagination">
                <items jcr:primaryType="cq:WidgetCollection">
                    <limitpag
                        jcr:primaryType="cq:Widget"
                        defaultValue="999"
                        fieldLabel="paginate at"
                        name="./pagination"
                        xtype="numberfield"/>
                    <npagination
                        jcr:primaryType="cq:Widget"
                        defaultValue="999"
                        fieldDescription="Enter limit of page"
                        fieldLabel="Max number of task"
                        name="./maxtask"
                        xtype="numberfield"/>
                </items>
            </tab2>
        </items>
    </items>
</jcr:root>
