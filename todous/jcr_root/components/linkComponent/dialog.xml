<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="link text dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="link page components">
                <items jcr:primaryType="cq:WidgetCollection">
                    <displayText
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Display the Text"
                        fieldLabel="DisplayText"
                        name="./linkpage"
                        xtype="textfield"/>
                    <link
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Link"
                        name="./link"
                        xtype="textfield"/>
                    <newWindow
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Open in new window"
                        name="./select"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
